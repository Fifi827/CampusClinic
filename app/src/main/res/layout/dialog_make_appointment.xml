<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="220dp"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="@color/colorMainBackground">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Make Appointment with this Doctor"
                android:layout_gravity="center"
                android:textColor="@android:color/holo_blue_bright"
                android:fontFamily="@font/transformers"
                android:textSize="20sp"/>

            <ImageView
                android:layout_width="100dp"
                android:id="@+id/iv_SelectDate"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_appointment"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvGetDate"
                android:text="Select Date"
                android:textColor="@android:color/holo_blue_bright"
                android:layout_marginTop="15dp"
                android:textSize="18dp"
                android:layout_gravity="center"
                android:fontFamily="@font/transformers"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:padding="10dp"
                android:orientation="horizontal">
                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Cancel"
                    android:id="@+id/btn_Cancel_Appointment"
                    android:textColor="@android:color/holo_blue_bright"
                    android:layout_margin="2dp"
                    android:background="@drawable/login_button_custom"
                    android:layout_weight="1"/>
                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Confirm"
                    android:id="@+id/btn_confirmApp"
                    android:textColor="@android:color/holo_blue_bright"
                    android:layout_margin="2dp"
                    android:background="@drawable/button_shape"
                    android:layout_weight="1"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>